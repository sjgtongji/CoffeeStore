<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="data" type="com.store.buzztime.coffee_store.Bean.Order"/>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="800px"
        android:layout_height="800px" android:background="@color/white"
        android:padding="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/rl_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btn_receive"
                android:layout_width="120dp"
                android:layout_height="40dp"
                style="@style/yellow_btn"
                android:text="接单"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_height="40dp"
                style="@style/white_btn"
                android:text="取消订单"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View
            android:id="@+id/view_divider1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray"
            android:layout_above="@+id/rl_btns"
            android:layout_marginBottom="@dimen/activity_vertical_margin"></View>
        <RelativeLayout
            android:id="@+id/rl_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_divider1"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/tv_order_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单: "
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="@style/black_text_content"/>
            <TextView
                android:id="@+id/tv_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.orderMoneyShow}"
                android:layout_centerVertical="true"
                style="@style/black_text_content"
                android:layout_toRightOf="@id/tv_order_money_text"/>
            <TextView
                android:id="@+id/tv_coupon_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠: "
                android:layout_centerVertical="true"
                style="@style/black_text_content"
                android:layout_toRightOf="@id/tv_order_money"/>
            <TextView
                android:id="@+id/tv_coupon_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.couponMoneyShow}"
                android:layout_centerVertical="true"
                style="@style/black_text_content"
                android:layout_toRightOf="@id/tv_coupon_money_text"/>
            <TextView
                android:id="@+id/tv_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.payMoneyShow}"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/black_text_content"/>
            <TextView
                android:id="@+id/tv_pay_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计: "
                android:layout_centerVertical="true"
                style="@style/black_text_content"
                android:layout_toLeftOf="@id/tv_pay_money"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_divider2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray"
            android:layout_above="@+id/rl_sum"></View>
        <RelativeLayout
            android:id="@+id/rl_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_divider2"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/tv_service_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务费: "
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="@style/black_text_content"/>
            <TextView
                android:id="@+id/tv_service_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.serviceFeeShow}"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/black_text_content"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_divider3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray"
            android:layout_above="@+id/rl_service"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_divider3"
            android:layout_alignParentTop="true"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</layout>
